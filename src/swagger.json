{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "My User Project CRUD",
    "description": "My User Project Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Box",
      "description": "Manage and run boxes"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/box/run": {
      "post": {
        "tags": [
          "Box"
        ],
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "Run Box",
            "in": "body",
            "description": "Run some aflat code on the server",
            "schema": {
              "$ref": "#/definitions/BoxRun"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A box has been run",
            "schema": {
              "properties":{
                "output":{
                  "type":"string"
                },
                "milis":{
                  "type":"integer"
                }
              }
            }
          }
        }
      }
    },
    "/modules":{
      "post":{
        "tags":[
          "Modules"
        ],
        "description":"Create new module",
        "parameters":[
          {
            "name":"Create Module",
            "in":"body",
            "description":"Create a new module",
            "schema":{
              "$ref":"#/definitions/Module"
            }
          }
        ],
        "produces":[
          "application/json"
        ],
        "responses":{
          "200":{
            "description":"A module has been created",
            "schema":{
              "properties":{
                "name":{
                  "type":"string"
                },
                "description":{
                  "type":"string"
                },
                "code":{
                  "type":"string"
                },
                "author":{
                  "type":"string"
                },
                "version":{
                  "type":"string"
                },
                "dependencies":{
                  "type":"array",
                  "items":{
                    "type":"string"
                  }
                }
              }
            }
          }
        }
      },
      "get":{
        "tags":[
          "Modules"
        ],
        "description": "Get a module by name",
        "parameters":[
          {
            "name":"name",
            "in":"query",
            "description":"The name of the module",
            "required":true,
            "type":"string"
          }
        ],
        "produces":[
          "application/json"
        ],
        "responses":{
          "200":{
            "description":"A module has been found",
            "schema":{
              "$ref":"#/definitions/Module"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "BoxRun": {
      "required": [
        "data"
      ],
      "properties": {
        "data": {
          "required": [
            "main",
            "id"
          ],
          "type":"object",
          "properties" : {
            "_id": {
              "type": "integer",
              "example": 0,
              "uniqueItems": true
            },
            "main" : {
                  "required": [
                    "name",
                    "content"
                  ],
                  "type":"object",
                  "properties" : {
                      "name" : {
                          "example": "Pretty",
                          "type":"string"
                      },
                      "content" : {
                          "type":"string",
                          "example": "import * from \"io\" under io; export int print() { io.print(\"Hello World\", 'r'); return 0; };"
                      }
                  }
            }
          }
        },
        "stdin": {
          "type":"string"
        }
      }
    },
    "Module": {
      "required": [
        "name",
        "description",
        "code",
        "author",
        "version",
        "dependencies"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "io"
        },
        "description": {
          "type": "string",
          "example": "Input/Output module"
        },
        "code": {
          "type": "string",
          "example": "import * from \"io\" under io; int main() { io.print(\"Hello World\"); return 0; };"
        },
        "author": {
          "type": "string",
          "example": "Aflat"
        },
        "version": {
          "type": "string",
          "example": "1.0.0"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}